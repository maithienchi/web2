<%- include('header', { title: 'Quên mật khẩu' }); -%>

<div class="body-main">
    <div class="full-slider" style="top: 30px; background: none;">
        <div class="container">
            <div class="row">
                <div class="col-sm-5 mx-auto">
                    <div class="card card-signin my-6" style="padding: 0 10px; top: 40px;">
                        <div class="card-body">
                            <div class="text-center"><img style="max-width: 25%; height: auto;"
                                    src="/images/logo-sala-bank.png"></div>
                            <h1 class="card-title text-center fadein_animation"
                                style="margin-bottom: 0; color: #dbbc55; letter-spacing: .1rem; font-weight: bold;">
                                SalaBank</h1>
                            <h3 class="card-text text-center"
                                style="margin-bottom: 1rem; color: #dbbc55; letter-spacing: .1rem; font-weight: bold;">
                                Quên mật khẩu</h3>
                            <% if (alert != '') { %>
                            <div class="alert alert-warning alert-dismissible fade show text-center" role="alert">
                                <% if (alert == '0') { %>
                                Email không tồn tại!
                                <% } else if (alert == '1') { %>
                                Vui lòng check Email vừa nhập!
                                <% } else if (alert == '2') { %>
                                Có lỗi xảy ra! Vui lòng kiểm tra lại đường dẫn.
                                <% } else if (alert == '3') { %>
                                Cập nhật mật khẩu mới thành công!
                                <% } else if (alert == '4') { %>
                                Cập nhật thất bại!
                                <% } else { %>
                                Có lỗi xảy ra!
                                <% } %>
                            </div>
                            <div class="control fix-ie" style="text-align: center; margin-top: 1.5rem;">
                                <button type="button" class="btn-hover color" style="text-transform: uppercase;"
                                    onclick="window.location.href='/'">
                                    Về trang chủ
                                </button>
                            </div>
                            <% } else { %>
                            <form method="POST" class="form-signin">
                                <div class="form-label-group">
                                    <input type="email" class="form-control" id="email" name="email"
                                        aria-describedby="numHelp" placeholder="Nhập Email" required autofocus>
                                    <label for="email">Email</label>
                                </div>
                                <div class="control fix-ie" style="text-align: center; margin-top: 1.5rem;">
                                    <button type="submit" class="btn-hover color" style="text-transform: uppercase;">
                                        Lấy lại mật khẩu
                                    </button>
                                </div>
                                <div class="login-link text-center">
                                    <small>Thông tin khách hàng được SalaBank bảo mật an toàn!</small>
                                </div>
                            </form>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('footer'); -%>