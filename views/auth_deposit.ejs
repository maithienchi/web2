<%- include('header_salaib', { title: 'Xác nhận giao dịch Mở tài khoản tiền gửi có kỳ hạn'}); -%>
<div class="breadcrumb_sala">
    <a>Trang chủ</a>
    <span class="split"> / </span>
    <a>Tiền gửi</a>
    <span class="split"> / </span>
    <a>Tiền gửi có kỳ hạn</a>
    <span class="split last"> / </span>
    <a>Mở tài khoản</a>
</div>
<div class="main_con">
    <ul class="main_con_ul">
        <li class="main_con_item">
            <ul>
                <li class="">
                    <h1 class="title">XÁC NHẬN GIAO DỊCH</h1>
                    <div class="con">
                        <% if (error != null) { %>
                        <div id="error">
                            <err>
                                <p><%= '(!) ' + error %></p>
                            </err>
                        </div>
                        <% } %>
                        <form method="POST" class="form-light">
                            <div class="table-responsive rounded-top">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th colspan="3" scope="col" class="text-left" style="padding-left: .5rem;">
                                                THÔNG TIN TÀI KHOẢN TIỀN GỬI CÓ KỲ HẠN
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <th scope="row">Tài khoản trích tiền </th>
                                            <input type="hidden" id="tktrichtien" name="tktrichtien"
                                                value="<%= tktt.account_number %>">
                                            <td><%= tktt.account_number %></td>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Sản phẩm </th>
                                            <input type="hidden" id="loaitgonline" name="loaitgonline"
                                                value="<%= sanpham %>">
                                            <input type="hidden" id="code_loaitgonline" name="code_loaitgonline"
                                                value="<%= code_sanpham %>">
                                            <td><%= sanpham %></td>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Lãi suất (%/năm) </th>
                                            <input type="hidden" id="laisuat" name="laisuat" value="<%= laisuat %>">
                                            <td><%= laisuat %> %/năm</td>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Số tiền gửi </th>
                                            <input type="hidden" id="sotien_tgonline" name="sotien_tgonline"
                                                value="<%= sotien %>">
                                            <input type="hidden" id="tienlaidukien" name="tienlaidukien"
                                                value="<%= tienlaidukien %>">
                                            <td><%= sotien + ' ' + tktt.currency %></td>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Ngày mở </th>
                                            <td><%= moment().format('DD/MM/YYYY') %></td>
                                            <td></td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Ngày đáo hạn </th>
                                            <input type="hidden" id="ngaydaohan" name="ngaydaohan"
                                                value="<%= ngaydaohan %>">
                                            <td><%= ngaydaohan %></td>
                                            <td></td>
                                        </tr>
                                    </tbody>
                                    <thead>
                                        <tr>
                                            <th colspan="3" scope="col" class="text-left rounded-top"
                                                style="padding-left: .5rem; border-top:none">
                                                XÁC NHẬN GIAO DỊCH
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td scope="row">Nhập mật khẩu đăng nhập</td>
                                            <td><input type="password" name="auth_password" value="" size="31"
                                                    class="form-control form-control-sm col-md-8">
                                            </td>
                                            <td></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="table-sl-btn-form" style="background-color: white; padding-top: 1rem;">
                                <a type="button" name="btnGoback_deposit" value="btnGoback_deposit"
                                    class="btn btn-primary btn-secondary" href="javascript:history.go(-2)"
                                    style="padding: .2rem 1.5rem .2rem 1.5rem;">Quay lại</a>
                                <button type="submit" name="btnAuthOK_deposit" value="btnAuthOK_deposit"
                                    class="btn btn-primary btn-danger" style="padding: .2rem 1.5rem .2rem 1.5rem;">
                                    Xác nhận</button>
                                <a type="button" class="btn btn-primary btn-secondary" href="/"
                                    style="padding: .2rem 1.5rem .2rem 1.5rem;">Hủy giao dịch</a>
                            </div>
                        </form>
                    </div>
                </li>
            </ul>
        </li>
    </ul>
</div>
<%- include('footer_salaib'); -%>